<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_word" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDocumentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biên bản cuộc họp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnViewDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sellector_button"
                android:src="@drawable/ic_action_view" />
            <ImageButton
                android:id="@+id/btnDownloadDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sellector_button"
                android:src="@drawable/ic_action_download" />
            <ImageButton
                android:id="@+id/btnEditDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sellector_button"
                android:src="@drawable/ic_action_edit" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>